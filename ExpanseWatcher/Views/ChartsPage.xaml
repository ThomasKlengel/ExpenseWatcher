<Page x:Class="ExpanseWatcher.Views.ChartsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpanseWatcher.Views"
      xmlns:view="clr-namespace:ExpanseWatcher.ViewModels"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChartsPage"  >
    <Page.DataContext>
        <view:ChartsPageVM/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <lvc:PieChart LegendLocation="Bottom" Hoverable="False"  Grid.Column="0" Series="{Binding Series}"/>
        <lvc:CartesianChart LegendLocation="Bottom" Hoverable="False"  Grid.Column="1" Series="{Binding Series2}"/>
    </Grid>
</Page>
